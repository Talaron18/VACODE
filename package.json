{
  "name": "term",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "watch": "tsc -w",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "package": "npm run build && electron-packager . VACode --platform=win32 --arch=x64 --out=pack --overwrite --icon=static/media/icon.png"
  },
  "author": "WEIJUN HONG, SHUAIYU DING",
  "license": "MIT",
  "description": "Summer Project by WEIJUN HONG, SHUAIYU DING, 2025",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "monaco-editor": "^0.53.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "node-pty": "^1.1.0-beta33",
    "openai": "^5.20.3"
  },
  "build": {
    "appId": "com.viennaAcademic.vacode",
    "productName": "VACODE",
    "directories": {
      "output": "pack",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "instruction.html",
      "static/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/media/vacode.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "VACode",
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "runAfterFinish": true
    },
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "electronVersion": "37.3.1",
    "forceCodeSigning": false
  }
}